<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.troublex3.mastermyhome.app.T3EntityEditorActivity$PlaceholderFragment">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            style="?android:listSeparatorTextViewStyle"/>

        <EditText
            android:id="@+id/entity_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name of device"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ISY Device"
            style="?android:listSeparatorTextViewStyle"/>

        <EditText
            android:id="@+id/entity_isy_device_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Device Address"
            />

        <EditText
            android:id="@+id/entity_isy_device_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Device Description"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select"
            android:id="@+id/entity_isy_device_select_button" />


    </LinearLayout>
</RelativeLayout>
